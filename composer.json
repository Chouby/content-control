{
    "name": "code-atlantic/content-control",
    "version": "1.1.9",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "minimum-stability": "dev",
    "require": {
        "pimple/pimple": "~3.2",
        "composer/installers": "~1.0"
    },
    "require-dev": {
        "php": ">=7.3",
        "code-atlantic/coding-standards": "dev-develop",
        "coenjacobs/mozart": "dev-master",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7",
        "sirbrillig/phpcs-variable-analysis": "^2.8",
        "phpunit/phpunit": "^6.5",
        "spatie/phpunit-watcher": "^1.23",
        "yoast/phpunit-polyfills": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "ContentControl\\": "classes/"
        }
    },
    "extra": {
        "mozart": {
            "dep_namespace": "ContentControl\\Dependencies\\",
            "dep_directory": "/classes/Dependencies/",
            "classmap_directory": "/packages/",
            "classmap_prefix": "ContentControl_",
            "packages": [
                "pimple/pimple"
            ],
            "delete_vendor_directories": false
        }
    },
    "prefer-stable": true,
    "scripts": {
        "post-install-cmd": [
            "\"vendor/bin/mozart\" compose",
            "composer dump-autoload"
        ],
        "post-update-cmd": [
            "\"vendor/bin/mozart\" compose",
            "composer dump-autoload"
        ],
        "format": "phpcbf --standard=phpcs.xml.dist --report-summary --report-source",
        "lint": "phpcs --standard=phpcs.xml.dist",
        "test": "phpunit",
        "test:watch": "phpunit-watcher watch < /dev/tty"
    },
    "config": {
        "platform": {
            "php": "7.4"
        },
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "composer/installers": true
        }
    }
}