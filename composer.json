{
    "name": "code-atlantic/content-control",
    "version": "2.0.0-beta",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "minimum-stability": "dev",
    "require": {
        "pimple/pimple": "~3.5",
        "composer/installers": "~2.2.0",
        "trustedlogin/client": "*"
    },
    "require-dev": {
        "code-atlantic/coding-standards": "dev-develop",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7",
        "php": ">=7.3",
        "phpunit/phpunit": "^6.5",
        "yoast/phpunit-polyfills": "^1.0",
        "scssphp/scssphp": "*"
    },
    "autoload": {
        "psr-4": {
            "ContentControl\\": "classes/"
        },
        "classmap": [
            "vendor-prefixed"
        ]
    },
    "extra": {
        "strauss": {
            "target_directory": "/vendor-prefixed/",
            "namespace_prefix": "ContentControl\\Vendor\\",
            "classmap_prefix": "ContentControl_",
            "constant_prefix": "CONTENTCONTROL_",
            "classmap_output": true,
            "packages": [
                "pimple/pimple",
                "trustedlogin/client"
            ],
            "delete_vendor_directories": false
        }
    },
    "prefer-stable": true,
    "scripts": {
        "format": "vendor/bin/phpcbf --standard=.phpcs.xml.dist --report-summary --report-source",
        "lint": "vendor/bin/phpcs --standard=.phpcs.xml.dist",
        "install-strauss": [
            "curl -o strauss.phar -L -C - https://github.com/BrianHenryIE/strauss/releases/latest/download/strauss.phar"
        ],
        "clean-vendor-prefix-folder": [
            "rm -rf vendor-prefixed/**/*"
        ],
        "post-install-cmd": [
            "@clean-vendor-prefix-folder",
            "@strauss",
            "@trustedlogin",
            "composer dump-autoload"
        ],
        "post-update-cmd": [
            "@clean-vendor-prefix-folder",
            "@strauss",
            "@trustedlogin",
            "composer dump-autoload"
        ],
        "release": [
            "@clean-vendor-prefix-folder",
            "@strauss",
            "@trustedlogin",
            "composer dump-autoload --optimize"
        ],
        "strauss": [
            "@install-strauss",
            "@php strauss.phar"
        ],
        "trustedlogin": [
            "@php vendor/bin/build-sass --namespace=content-control"
        ],
        "test": "phpunit",
        "test:watch": "phpunit-watcher watch < /dev/tty"
    },
    "config": {
        "platform": {
            "php": "7.4"
        },
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "composer/installers": true
        }
    }
}