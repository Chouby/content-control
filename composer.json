{
    "name": "code-atlantic/content-control",
    "version": "1.1.9",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "minimum-stability": "dev",
    "require": {
        "pimple/pimple": "~3.2",
        "composer/installers": "~1.0"
    },
    "require-dev": {
        "brianhenryie/strauss": "^0.12.0",
        "code-atlantic/coding-standards": "dev-develop",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7",
        "php": ">=7.3",
        "phpunit/phpunit": "^6.5",
        "sirbrillig/phpcs-variable-analysis": "^2.8",
        "spatie/phpunit-watcher": "^1.23",
        "yoast/phpunit-polyfills": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "ContentControl\\": "classes/"
        },
        "classmap": [
            "vendor-prefixed"
        ]
    },
    "extra": {
        "strauss": {
            "target_directory": "/vendor-prefixed/",
            "namespace_prefix": "ContentControl\\Vendor\\",
            "classmap_prefix": "ContentControl_",
            "constant_prefix": "CONTENTCONTROL_",
            "classmap_output": true,
            "packages": [
                "pimple/pimple"
            ],
            "delete_vendor_directories": false
        }
    },
    "prefer-stable": true,
    "scripts": {
        "strauss": [
            "vendor/bin/strauss"
        ],
        "post-install-cmd": [
            "@strauss",
            "composer dump-autoload"
        ],
        "post-update-cmd": [
            "@strauss",
            "composer dump-autoload"
        ],
        "format": "phpcbf --standard=phpcs.xml.dist --report-summary --report-source",
        "lint": "phpcs --standard=phpcs.xml.dist",
        "test": "phpunit",
        "test:watch": "phpunit-watcher watch < /dev/tty"
    },
    "config": {
        "optimize-autoloader": false,
        "platform": {
            "php": "7.4"
        },
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "composer/installers": true
        }
    }
}